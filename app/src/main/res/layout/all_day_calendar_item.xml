<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="2dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_pending_all_day"
        android:visibility="gone"
        android:id="@+id/all_day_pending_background" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_accepted_all_day"
        android:visibility="gone"
        android:id="@+id/all_day_accepted_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendar_item_text"
        android:textColor="@android:color/white"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        android:textStyle="bold" />

</FrameLayout>